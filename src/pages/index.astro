---
import Hero from '~/components/landing/Hero.astro';
import PageLayout from '~/layouts/PageLayout.astro';
import japaneseWaves from '~/assets/images/japanese-waves.webp';
---

<PageLayout>
  <div class="h-[calc(100vh-var(--header-height)-var(--footer-height))]">
    <section
      id="hero"
      class="relative w-full h-full bg-cover bg-center bg-no-repeat"
      style={`background-image: url(${japaneseWaves.src})`}
    >
      <div class="absolute inset-0"></div>
      <div class="relative z-10 h-full">
        <Hero />
      </div>
    </section>
  </div>
</PageLayout>

<style>
  :root {
    --header-height: 70px; /* Adjust based on your header's actual height */
    --footer-height: 60px; /* Adjust based on your footer's actual height */
  }
</style>
